package lab2011;

public class Piramide {

	public static void piramida1 (int n){
	 for (int i = 1; i<=n; i++) { 
		 for ( int j=1;j<=i; j++)  {
			 System.out.printf("%-2d", j);
		 }
		System.out.println(); }
	 }
	
	public static void piramida2 (int n){
		 for (int i = n; i<=n; i++) { 
			 for ( int j=6;j>=i; j++)  {
				 System.out.printf("%-2d", j);
			 }
			System.out.println(); }
		 }
	
	/*
	*
	*
	*
	*Ipisuje piramidu
	*1
	*12
	*123
	*1234n
	*
	*
	*
	*/
	
	public static void main(String[] args) {
		piramida1(6);
	}
}
