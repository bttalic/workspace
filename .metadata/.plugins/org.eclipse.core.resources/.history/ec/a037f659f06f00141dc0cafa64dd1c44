package lab1911;

import java.util.Scanner;

public class Freefall {
public static void main(String[] args) {
	Scanner in = new Scanner(System.in);
	System.out.println("Molim vas unesite duzinu pada u sekundama");
	double vrijemePada= in.nextInt();
	double visina;
	double gravitacija= 9.81;
	
	visina=(1/2*gravitacija*(vrijemePada*vrijemePada));
	System.out.println("Distanca predjena glasi: " + visina + "metara.");
	
	
}
}
