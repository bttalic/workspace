
public class Rekurzija {
	
	public static void main(String[] args) {
		int broj = 10;
				prvaRekurzija(broj);
	}

	public static void prvaRekurzija(int broj){
		if (broj==1){
			System.out.println("Broj je jedan" );
		}else{
		 prvaRekurzija(broj-1);
		 System.out.println("broj je : " + broj);
		}
	}
}
